<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mcaprotect.broker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".activities.DashboardActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BaseActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.EnterNewPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AboutusTcPrivacyWebviewActivity"
            android:screenOrientation="portrait" />

        <!--
            <activity
            android:name=".activities.MPinActivity"
            android:screenOrientation="portrait" />
        -->
        <activity android:name=".activities.ApplicationsDetailActivity" />
        <activity android:name=".activities.RightMenuActivity"></activity>
    </application>

</manifest>