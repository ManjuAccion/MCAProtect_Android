<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/item_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/app_blue_80_percent"
            android:text="Test1\n Test1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar_parent_linearlayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/bar_linearlayout"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@color/bar_item_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            />


    </LinearLayout>
</LinearLayout>
