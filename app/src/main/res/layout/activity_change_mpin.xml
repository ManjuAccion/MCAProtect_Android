<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_navigation"
        android:id="@+id/include" />

    <include layout="@layout/footer" />

    <include layout="@layout/layout_error_banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loginscreen_left_margin"
        android:layout_marginRight="@dimen/loginscreen_right_margin"
        android:paddingTop="@dimen/loginscreen_margin_top"
        android:layout_below="@+id/include"
        android:layout_above="@+id/footer"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:background="@drawable/login_logo" />

            <TextView
                android:id="@+id/login_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:text="@string/change_mpin"
                android:textColor="@color/forgot_password"
                android:textSize="@dimen/login_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_your_old_mpin"
                android:textColor="@color/app_blue_60_percent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:orientation="horizontal">

                <org.mcaprotect.broker.utils.PinEntryView
                    android:id="@+id/oldpin_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"

                    app:accentType="all"
                    app:digitElevation="15dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_mpin"
                android:textColor="@color/app_blue_60_percent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:orientation="horizontal">

                <org.mcaprotect.broker.utils.PinEntryView
                    android:id="@+id/newpin_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"

                    app:accentType="all"
                    app:digitElevation="15dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_mpin"
                android:textColor="@color/app_blue_60_percent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:orientation="horizontal">

                <org.mcaprotect.broker.utils.PinEntryView
                    android:id="@+id/confirm_newpin_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"

                    app:accentType="all"
                    app:digitElevation="15dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/setpin_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:background="@drawable/custom_button"
                android:text="@string/set_pin"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="@dimen/login_button_size" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>







