<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.mcaprotect.broker.activities.DashboardActivity">

    <RelativeLayout
        android:id="@+id/header_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_title_bar_height"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/left_menu_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:padding="@dimen/header_btn_padding"
            android:src="@drawable/burger_nav" />

        <ImageView
            android:id="@+id/right_menu_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:clickable="true"
            android:padding="@dimen/header_btn_padding"
            android:src="@drawable/option_nav" />


        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/right_menu_imageview"
            android:layout_toRightOf="@id/left_menu_imageview"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/dashboard"
            android:textAllCaps="false"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_gray_60_percent" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_nav_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/deal_pipeline_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_red"
            android:gravity="center">

            <TextView
                android:id="@+id/bottom_tab_deal_pipeline_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/deal_pipeline"
                android:textColor="@color/white_color"
                android:textSize="@dimen/bottom_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/performance_comparison_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/bottom_tab_performance_comparison_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/performance_comparison"
                android:textColor="@color/white_color"
                android:textSize="@dimen/bottom_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deals_funded_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/bottom_tab_deals_funded_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/deals_funded"
                android:textColor="@color/white_color"
                android:textSize="@dimen/bottom_bar_text_size" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_linearlayout"
        android:layout_below="@id/header_relativelayout">

        <include layout="@layout/fragment_container" />
    </LinearLayout>
</RelativeLayout>
