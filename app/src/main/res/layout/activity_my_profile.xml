<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <include layout="@layout/header_navigation" />

    <include layout="@layout/footer" />

    <include layout="@layout/layout_error_banner" />

    <View
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header"
        android:background="@color/app_gray_40_percent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header_view"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_to_icon_space"
            android:layout_marginLeft="@dimen/loginscreen_left_margin"
            android:layout_marginRight="@dimen/loginscreen_right_margin"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_imageview"
                android:layout_width="@dimen/dashboard_profile_size_original"
                android:layout_height="@dimen/dashboard_profile_size_original"
                android:layout_gravity="center"
                android:src="@drawable/splash_logo" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/businessWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appicon_to_title_space">

                <EditText
                    android:id="@+id/name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textColorHint="@color/app_blue_40_percent"
                    android:textSize="@dimen/edittext_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emailidWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_to_edittext_textview_space">

                <EditText
                    android:id="@+id/email_id_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_id"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/app_blue_40_percent"
                    android:textSize="@dimen/edittext_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phonenumberWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_to_edittext_textview_space">

                <EditText
                    android:id="@+id/phone_number_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:textColorHint="@color/app_blue_40_percent"
                    android:textSize="@dimen/edittext_size" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/textview_space"
                android:background="@drawable/custom_button"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/save_button"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="@dimen/button_textsize" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>