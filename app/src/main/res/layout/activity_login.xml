<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/footer" />

    <include layout="@layout/layout_error_banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_us_holder"
        android:layout_marginLeft="@dimen/loginscreen_left_margin"
        android:layout_marginRight="@dimen/loginscreen_right_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:background="@drawable/login_logo" />

            <TextView
                android:id="@+id/login_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:text="@string/login"
                android:textColor="@color/app_red"
                android:textSize="@dimen/login_text_size" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/usernameWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginscreen_margin_top">

                <EditText
                    android:id="@+id/email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="email id"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginscreen_margin_top">

                <EditText
                    android:id="@+id/password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:inputType="textWebPassword" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/remember_password_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="19dp"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/remember_password_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:paddingLeft="@dimen/check_box_padding"
                    android:text="@string/remember_password"
                    android:textColor="@color/remember_password"
                    android:textSize="@dimen/remember_password" />

            </LinearLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:background="@drawable/custom_button"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="@dimen/login_button_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_above="@+id/footer"
                android:layout_marginTop="@dimen/loginscreen_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forgot_password_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/forgot_password"
                    android:textColor="@color/forgot_password"
                    android:textSize="@dimen/forgot_password" />

                <TextView
                    android:id="@+id/new_user_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="@string/new_user"
                    android:textColor="@color/forgot_password"
                    android:textSize="@dimen/forgot_password" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/about_us_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_above="@+id/footer"
        android:layout_marginLeft="@dimen/loginscreen_left_margin"
        android:layout_marginRight="@dimen/loginscreen_right_margin"
        android:layout_marginTop="@dimen/loginscreen_margin_top">

        <TextView
            android:id="@+id/about_us_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/aboutus_message"
            android:textColor="@color/about_us_tc_privacy"
            android:textSize="@dimen/about_us_tc_privacy" />

        <TextView
            android:id="@+id/terms_conditions_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/terms_conditions"
            android:textColor="@color/about_us_tc_privacy"
            android:textSize="@dimen/about_us_tc_privacy" />

        <TextView
            android:id="@+id/privacy_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/privacy_message"
            android:textColor="@color/about_us_tc_privacy"
            android:textSize="@dimen/about_us_tc_privacy" />

    </LinearLayout>
</RelativeLayout>
