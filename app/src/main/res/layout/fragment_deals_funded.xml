<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context="org.mcaprotect.broker.fragments.DealsFundedFragment">

    <TextView
        android:id="@+id/screen_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dashboard_screen_title_margin_top"
        android:text="@string/title_deals_funded"
        android:textColor="@color/dashboard_screen_title_color"
        android:textSize="@dimen/dashboard_screen_title_size" />


    <TextView
        android:id="@+id/instruction_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title_textview"
        android:layout_marginBottom="@dimen/dashboard_instruction_margin_bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/dashboard_instruction_margin_top"
        android:text="@string/deals_funded_instruction"
        android:textColor="@color/dashboard_screen_text_color"
        android:textSize="@dimen/dashboard_screen_text_size" />


    <!--<com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/instruction_textview"
        android:background="@android:color/white" />-->

    <LinearLayout
        android:id="@+id/range_scale_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instruction_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textSize="@dimen/graph_bar_text_size" />

            <View
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:background="@color/app_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="($)"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="20,000"
                    android:textSize="@dimen/graph_bar_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:background="@color/app_gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="40,000"
                    android:textSize="@dimen/graph_bar_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:background="@color/app_gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="60,000"
                    android:textSize="@dimen/graph_bar_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:background="@color/app_gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="80,000"
                    android:textSize="@dimen/graph_bar_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:background="@color/app_gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/graph_bar_text_margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="100,000"
                    android:textSize="@dimen/graph_bar_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="5dp"
                    android:background="@color/app_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_gray" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/deals_funded_graph_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/range_scale_linearlayout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/screen_margin_left"
        android:layout_marginRight="@dimen/screen_margin_right"
        android:layout_marginTop="20dp"
        android:background="@color/white_color"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />


</RelativeLayout>
