<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context="org.mcaprotect.broker.fragments.DealsFundedFragment">

    <TextView
        android:id="@+id/screen_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dashboard_screen_title_margin_top"
        android:text="@string/title_deals_funded"
        android:textColor="@color/dashboard_screen_title_color"
        android:textSize="@dimen/dashboard_screen_title_size" />


    <TextView
        android:id="@+id/instruction_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title_textview"
        android:layout_marginBottom="@dimen/dashboard_instruction_margin_bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/dashboard_instruction_margin_top"
        android:text="@string/deals_funded_instruction"
        android:textColor="@color/dashboard_screen_text_color"
        android:textSize="@dimen/dashboard_screen_text_size" />


    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/instruction_textview"
        android:background="@android:color/white" />


</RelativeLayout>
