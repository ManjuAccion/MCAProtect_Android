<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context="org.mcaprotect.broker.fragments.PerformanceComparisonFragment">

    <TextView
        android:id="@+id/screen_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_margin_left"
        android:layout_marginTop="@dimen/dashboard_screen_title_margin_top"
        android:text="@string/title_performance_comparison"
        android:textColor="@color/dashboard_screen_title_color"
        android:textSize="@dimen/dashboard_screen_title_size" />


    <TextView
        android:id="@+id/instruction_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title_textview"
        android:layout_marginBottom="@dimen/dashboard_instruction_margin_bottom"
        android:layout_marginLeft="@dimen/screen_margin_left"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/dashboard_instruction_margin_top"
        android:text="@string/performance_comparison_instruction"
        android:textColor="@color/dashboard_screen_text_color"
        android:textSize="@dimen/dashboard_screen_text_size" />

    <LinearLayout
        android:id="@+id/time_selector_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instruction_textview"
        android:layout_marginLeft="@dimen/screen_margin_left"
        android:layout_marginRight="@dimen/screen_margin_right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_time_range_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_time_range"
                android:textColor="@color/dashboard_screen_text_color"
                android:textSize="@dimen/dashboard_screen_item_label_tex_size" />


            <RelativeLayout
                android:id="@+id/start_time_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/start_time_iamgeview"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/app_blue" />

                <TextView
                    android:id="@+id/start_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/start_time_iamgeview"
                    android:layout_toLeftOf="@+id/start_time_selector_imageview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/current_month"
                    android:maxLines="1"
                    android:textColor="@color/dashboard_screen_title_color"
                    android:textSize="@dimen/dashboard_screen_text_size" />

                <ImageView
                    android:id="@id/start_time_selector_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/down_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/start_time_textview"
                    android:layout_marginTop="8dp"
                    android:background="@color/app_blue" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/end_time_range_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compare_with"
                android:textColor="@color/dashboard_screen_text_color"
                android:textSize="@dimen/dashboard_screen_item_label_tex_size" />


            <RelativeLayout
                android:id="@+id/end_time_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/end_time_iamgeview"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/app_red" />

                <TextView
                    android:id="@+id/end_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/end_time_iamgeview"
                    android:layout_toLeftOf="@+id/end_time_selector_imageview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/current_month"
                    android:maxLines="1"
                    android:textColor="@color/dashboard_screen_title_color"
                    android:textSize="@dimen/dashboard_screen_text_size" />

                <ImageView
                    android:id="@id/end_time_selector_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/down_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/end_time_textview"
                    android:layout_marginTop="8dp"
                    android:background="@color/app_blue" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



    <ListView
        android:id="@+id/performance_comparison_graph_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/time_selector_linearlayout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/screen_margin_left"
        android:layout_marginRight="@dimen/screen_margin_right"
        android:layout_marginTop="20dp"
        android:background="@color/white_color"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />


</RelativeLayout>
